<PropertyList>

 <fx>
     <engine>
		<name>engine</name>
		<path>/Aircraft/Honda-CBR/Sounds/engine-high.wav</path>  <!--BMW-S-RR-engine -->
		<mode>looped</mode>
		<volume>
	      <property>engines/engine/rpm</property>
	      <offset>0.01</offset>
	      <factor>0.0002</factor>
	      <min>0.0</min>
	      <max>1.0</max>
		</volume>
  	    <pitch>
  	      <property>engines/engine/rpm</property>
	      <offset>0.06</offset>
	      <factor>0.0000782</factor>
	      <min>0.0</min>
	      <max>5.0</max>
  	    </pitch>
		<reference-dist>10</reference-dist>
		<max-dist>800</max-dist>
    </engine>

	<engine>
	    <name>enginecrash</name>
	    <path>/Aircraft/Honda-CBR/Sounds/broken.wav</path>
	    <mode>once</mode>
	     <condition>
		 <greater-than>
	       <property>sim/multiplay/generic/float[4]</property>
		   <value>0.95</value>
	   </greater-than>
	    </condition>
	    <volume>
	      <value>10.0</value>
	    </volume>
	    <reference-dist>180</reference-dist>
	    <max-dist>500</max-dist>
	  </engine>
</fx>
 
</PropertyList>
