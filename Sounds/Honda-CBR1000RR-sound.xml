<PropertyList>

 <fx>
  <crank>
   <name>crank</name>
   <mode>looped</mode>
   <path>Sounds/cranking.wav</path>
   <condition>
    <property>/engines/engine/cranking</property>
   </condition>
   <volume>
    <offset>0.9</offset>
   </volume>
  </crank>

  	<engine>
  	    <name>enginecrash</name>
  	    <path>Aircraft/Honda-CBR/Sounds/broken.wav</path>
  	    <mode>once</mode>
  	     <condition>
			 <greater-than>
  	      	   <property>/engines/engine/killed</property>
			   <value>0.95</value>
		   </greater-than>
  	    </condition>
  	    <volume>
  	      <value>10.0</value>
  	    </volume>
  	    <reference-dist>180</reference-dist>
  	    <max-dist>500</max-dist>
  	  </engine>
	  
  	<engine>
  	    <name>engine</name>
  	    <path>Aircraft/Honda-CBR/Sounds/engine-high.wav</path>  <!--BMW-S-RR-engine -->
  	    <mode>looped</mode>
	     <condition>
		   <greater-than>
 	      	  	<property>/engines/engine/rpm</property>
		   		<value>10</value>
	   	 </greater-than>
	    </condition>
  	    <volume>
  	      <property>/engines/engine/rpm</property>
  	      <offset>0.01</offset>
  	      <factor>0.0002</factor>
  	      <min>0.3</min>
  	      <max>2.0</max>
  	    </volume>
  	    <pitch>
  	      <property>/engines/engine/rpm</property>
	      <offset>0.06</offset>
	      <factor>0.00009</factor>
	      <min>0.0</min>
	      <max>5.5</max>
  	    </pitch>
  	  </engine>

  <gear>
   <name>gearclutch</name>
   <mode>once</mode>
   <path>Aircraft/Honda-CBR/Sounds/gear.wav</path>
   <condition>
     <property>/engines/engine/gear-sound</property>
   </condition>
   <volume>
    <offset>0.9</offset>
   </volume>
  </gear>
  
<start>
    <name>startsignal1</name>
    <path>Aircraft/Honda-CBR/Sounds/beepStart.wav</path>
    <mode>once</mode>
     <condition>
	 <equals>
      	   <property>/startsignal</property>
	   <value>1</value>
   </equals>
    </condition>
    <volume>
      <value>10.0</value>
    </volume>
    <reference-dist>180</reference-dist>
    <max-dist>500</max-dist>
  </start>	  

	<start>
	    <name>startsignal2</name>
	    <path>Aircraft/Honda-CBR/Sounds/beepStart.wav</path>
	    <mode>once</mode>
	     <condition>
		 <equals>
	      	   <property>/startsignal</property>
		   <value>2</value>
	   </equals>
	    </condition>
	    <volume>
	      <value>10.0</value>
	    </volume>
	    <reference-dist>180</reference-dist>
	    <max-dist>500</max-dist>
	  </start>
  
	<start>
	    <name>startsignal3</name>
	    <path>Aircraft/Honda-CBR/Sounds/beepStart.wav</path>
	    <mode>once</mode>
	     <condition>
		 <equals>
	      	   <property>/startsignal</property>
		   <value>3</value>
	   </equals>
	    </condition>
	    <volume>
	      <value>10.0</value>
	    </volume>
	    <reference-dist>180</reference-dist>
	    <max-dist>500</max-dist>
	  </start>

  	<start>
  	    <name>startsignal4</name>
  	    <path>Aircraft/Honda-CBR/Sounds/beepStart.wav</path>
  	    <mode>once</mode>
  	     <condition>
  		 <equals>
  	      	   <property>/startsignal</property>
  		   <value>4</value>
  	   </equals>
  	    </condition>
  	    <volume>
  	      <value>10.0</value>
  	    </volume>
  	    <reference-dist>180</reference-dist>
  	    <max-dist>500</max-dist>
  	  </start>
  
  	<start>
  	    <name>startsignal5</name>
  	    <path>Aircraft/Honda-CBR/Sounds/beepStart.wav</path>
  	    <mode>once</mode>
  	     <condition>
  		 <equals>
  	      	   <property>/startsignal</property>
  		   <value>5</value>
  	   </equals>
  	    </condition>
  	    <volume>
  	      <value>10.0</value>
  	    </volume>
  	    <reference-dist>180</reference-dist>
  	    <max-dist>500</max-dist>
  	  </start> 
