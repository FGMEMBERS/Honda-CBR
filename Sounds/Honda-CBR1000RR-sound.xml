	    <name>startsignal7</name>
	    <path>Aircraft/Honda-CBR/Sounds/beepStartGo.wav</path>
	    <mode>once</mode>
	     <condition>
		 <equals>
	      	   <property>/startsignal</property>
		   <value>7</value>
	   </equals>
	    </condition>
	    <volume>
	      <value>10.0</value>
